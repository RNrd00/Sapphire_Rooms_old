<%= form_with(model: [book, book_comment], method: :post, url: public_book_book_comments_path(book, book_comment), lacal: true) do |f| %>
    <%= f.text_area :comment, rows:'5', placeholder: "コメントはここに書いてください", class:'w-100' %>
    <%= f.submit "送信する", class:'btn btn-success btn-lg btn-base-1 mt-20 pull-light' %>
<% end %>