<div class="container">
    <div class="row">
        <div class="col-sm-10 col-md-12 col-lg-12 px-4 px-sm-0 mx-auto">
            <h1>コメント編集画面</h1>
            <%= form_with model: @book, method: :patch, url: public_book_path do |f| %>
                <%= f.label '貴方の名前:' %>
                <%= f.text_field :name, class:'w-25' %>
                <%= f.label '削除パスワード(1~100の文字か数字)' %>
                <%= f.text_field :delete_key, :size => "/\A\w{1,100}\z/i", class:'w-25' %><br>
                <br>
                <%= f.label 'コメント' %>
                <%= f.text_area :introduce, class:'form-control w-100', rows:'5' %>
                <br>
                <%= f.submit 'コメント編集', class:'btn btn-success' %>
            <% end %>
        </div>
    </div>
</div>