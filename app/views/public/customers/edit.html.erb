<div class="container">
    <div class="row">
        <div class="col-sm-2">
            <div class="form-text">
            <%= form_with model: @customer, url: public_customer_path(@customer), method: :patch do |f| %>
                <%= f.label '名前' %>
                <%= f.text_field :name %>
        
                <%= f.label '自己紹介' %>
                <%= f.text_area :introduce %>
        
                <%= f.label '画像' %>
                <%= f.file_field :profile_image, accept: "image/*" %>
        
                <%= f.submit '更新', class:'btn btn-success' %>
            <% end %>
            </div>
        </div>
    </div>
</div>
