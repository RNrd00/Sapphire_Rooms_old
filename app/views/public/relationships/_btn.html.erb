<% if current_customer != customer %>
    <% if current_customer.following?(customer) %>
        <%= link_to 'フォローを外す', public_customer_relationships_path(customer.id), method: :delete, class:"btn btn-info" %>
    <% else %>
        <%= link_to 'フォローをする', public_customer_relationships_path(customer.id), method: :post, class:'btn btn-success' %>
    <% end %>
<% end %>